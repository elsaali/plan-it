<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.chart.PieChart?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.DashboardController"
      alignment="CENTER" spacing="20"
      styleClass="content-box">

    <Label text="Plan It Dashboard" styleClass="header-title"/>
    <Label text="Upcoming Tasks" styleClass="section-title"/>
    <ListView fx:id="taskListView" prefHeight="200" prefWidth="400"/>

    <Label text="Progress" styleClass="section-title"/>
    <ProgressBar fx:id="progressBar" prefWidth="400"/>
    <PieChart fx:id="taskProgressChart" prefWidth="400" prefHeight="300"/>

    <VBox alignment="CENTER" spacing="10">
        <Button text="Dark Theme" onAction="#applyDarkTheme" styleClass="action-button"/>
        <Button text="Light Theme" onAction="#applyLightTheme" styleClass="action-button"/>
        <Button text="Sync with Canvas" onAction="#syncWithCanvas" styleClass="action-button"/>
        <Button text="Add New Task" onAction="#openNewTask" styleClass="action-button"/>
        <Button text="Go Back to Home" onAction="#goBackToHome" styleClass="action-button"/>
    </VBox>
</VBox>
