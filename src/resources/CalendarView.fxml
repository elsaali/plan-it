<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CalendarViewController" spacing="15">
    <Label text="Calendar View" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <ListView fx:id="taskListView" prefHeight="200" prefWidth="400"/>
    <Button text="Add New Task" onAction="#openNewTask"/>
    <Label text="Task Calendar" style="-fx-font-size: 18;"/>
    <GridPane fx:id="calendarGrid" gridLinesVisible="true" />
</VBox>
