<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>


<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TaskListController" spacing="10" alignment="CENTER" style="-fx-background-color: #433878; -fx-padding: 20px;">
    <HBox alignment="TOP_LEFT" style="-fx-padding: 0;">
        <Label text="Plan It!" style="-fx-font-family: 'Helvetica'; -fx-font-weight: bold; -fx-font-size: 30px; -fx-text-fill: #FFE1FF;"/>
    </HBox>
    <Label fx:id="reminderLabel" text="No reminders for today" style="-fx-font-family: 'Helvetica'; -fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #FFE1FF;"/>
    <ListView fx:id="taskListView" prefHeight="400" prefWidth="600" styleClass="task-list-box"/>
    <Button text="Sync with Canvas" onAction="#syncWithCanvas"/>
    <Button text="Add New Task" onAction="#openNewTask" style="-fx-font-size: 16;"/>
</VBox>
